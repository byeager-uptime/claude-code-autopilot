{
  "unit-test": {
    "enabled": true,
    "frameworks": [
      "jest"
    ],
    "timeout": 30
  },
  "gui-test": {
    "enabled": true,
    "frameworks": [
      "playwright",
      "cypress"
    ],
    "viewport": {
      "width": 1280,
      "height": 720
    },
    "browsers": [
      "chromium",
      "firefox"
    ],
    "timeout": 45
  },
  "integration-test": {
    "enabled": false,
    "timeout": 60,
    "endpoints": []
  },
  "performance-test": {
    "enabled": false,
    "thresholds": {
      "response_time": 500,
      "memory_usage": 100,
      "cpu_usage": 80
    },
    "timeout": 90
  },
  "security-test": {
    "enabled": false,
    "scanners": [
      "npm-audit",
      "snyk",
      "dependency-check"
    ],
    "timeout": 120
  }
}
